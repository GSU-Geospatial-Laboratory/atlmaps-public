accordion-heading
	| Layer Information <i class="icon-chevron-right pull-right", ng-show="!$parent.popupInfo"> </i> <i class="icon-chevron-down pull-right", ng-show="$parent.popupInfo"> </i>
div
	a(data-toggle='lightbox', href='#layer_{{popupContent.image.name}}_lightbox')
		img(ng-show='popupContent.image', ng-src='{{popupContent.image.url}}')
	div(ng-show="popupContent.image.credit")
		small Photo credit: {{popupContent.image.credit}}
	h3{{popupContent.name}}
	p(ng-bind-html-unsafe="popupContent.description")
	div(id="layer_{{popupContent.image.name}}_lightbox",class="lightbox hide fade", tabindex="-1", role="dialog", aria-hidden="true", style="position: fixed; width: 621px; height: 419px; top: 0px; left: 50%; margin-left: -310.5px; display: none;")
		div(class="lightbox-content")
			img(ng-src='{{popupContent.image.url}}')
			div(class="lightbox-caption", ng-show="popupContent.image.credit")
				small Photo credit: {{popupContent.image.credit}}
